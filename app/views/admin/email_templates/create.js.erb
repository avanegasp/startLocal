
<% if @template.valid? %>
  $('#email-template-modal').modal('hide'); 
  $('table tbody').append("<%= j render @template %>");
<% else %>
  <% if @template.errors[:title].any? %>
    invalidField('.templete-title', '<%= @template.errors[:title].first %>');
  <% else %>
    validField('.templete-title')
  <% end %>
  <% if @template.errors[:subject].any? %>
    invalidField('.templete-subject', '<%= @template.errors[:subject].first %>');
  <% else %>
    validField('.templete-subject')
  <% end %>
  <% if @template.errors[:body].any? %>
    invalidField('.templete-body', '<%= @template.errors[:body].first %>');
  <% else %>
    validField('.templete-body')
  <% end %>
<%end%>