<!-- Modal EnvÃ­ar Email-->
<div class="modal fade" id="send_email" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for ([:admin, @template]) do |f| %>
          <%=label_tag(:title, "Titulo")%>
          <%=f.text_field :title, class:"concept_field form-control form-control-lg"%>
          <%=label_tag(:subject, "Asunto")%>
          <%=f.text_field :subject, class:"concept_field form-control form-control-lg"%>
          <%=label_tag(:body, "Cuerpo")%>
          <%= f.text_area :body, class:"concept_field form-control form-control-lg"  %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>