<div class="email-template-page">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <div class="actions-header">
          <%= link_to "&larr; Volver a las plantillas".html_safe, admin_email_templates_path %>
          <div class="template-actions">
            <%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, admin_email_templates_path, class: "btn btn-primary"%>
          </div>
        </div>
        <div class="box-wrapper">
          <div class="box-header"><%= @template.title %></div>
          <div class="box-body">
            <div class="field">
              <div class="field-label">ASUNTO</div>
              <div class="field-value"><%= @template.subject %></div>
            </div>

            <div class="field">
              <div class="field-label">CUERPO</div>
              <div class="field-value"><%= @template.body %></div>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
