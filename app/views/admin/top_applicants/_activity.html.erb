<div class="activity">
  <div class="activity-date"><%= activity.created_at.strftime("%b %d %I:%M %p") %></div>
  <div class="activity-detail"><%= generate_activity_detail(activity) %></div>
  <% if activity.comment.present? %>
  <div class="activity-comment"><%= activity.comment %></div>
  <% end %>
</div>
