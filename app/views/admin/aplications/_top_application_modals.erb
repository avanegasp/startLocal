<!-- Modal Cambiar Estado-->
<div class="modal fade" id="change_state" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="">
        <%=form_for @topApplicant do |f|%>
          <%=label_tag(:user,"user" )%>
          <%=f.collection_select :user.statuses, User.all, :statuses, :name, {}, class: "form-control"%>
        <%end%>
      </div>
      <div class="modal-body">
       cambiar estado
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>


